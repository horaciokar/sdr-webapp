[Unit]
Description=ADSB Flask Web Application
Wants=network-online.target
After=network-online.target

[Service]
User=hkarzon
Group=hkarzon
WorkingDirectory=/home/hkarzon/sdr-webapp/adsb-flask
ExecStart=/home/hkarzon/sdr-webapp/adsb-flask/.venv/bin/python3 app.py

# Reinicio autom√°tico y robustez
Restart=always
RestartSec=5

# Mejoras de seguridad
ProtectSystem=full
PrivateTmp=true
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
